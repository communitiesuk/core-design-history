{% set headingLevel = params.headingLevel or 2 %}

<div class="app-related-navigation {%- if params.classes %} {{ params.classes }}{% endif -%}"
  {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  {% for section in params.sections %}
    {% set sectionTitle = section.title or "Related content" %}
    <nav class="app-related-navigation__nav-section" role="navigation" aria-labelledby="related-nav-{{ sectionTitle | slugify }}">
      <h{{ headingLevel }} class="app-related-navigation__main-heading" id="related-nav-related_items-{{ sectionTitle | slugify  }}">
        {{ sectionTitle }}
      </h{{ headingLevel }}>
      {% if section.items %}
        <ul class="app-related-navigation__link-list">
          {% for item in section.items %}
            <li class="app-related-navigation__link">
              <a class="govuk-link app-related-navigation__section-link app-related-navigation__section-link--other" href="{{ item.href }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
      {% for subsection in section.subsections %}
        <nav role="navigation" class="app-related-navigation__nav-section" aria-labelledby="related-nav-{{ subsection.title | slugify }}">
          <h{{ headingLevel + 1 }} class="app-related-navigation__sub-heading" id="related-nav-topics-{{ subsection.title | slugify }}">
            {{ subsection.title }}
          </h{{ headingLevel + 1 }}>
          <ul class="app-related-navigation__link-list">
            {% for item in subsection.items %}
              <li class="app-related-navigation__link">
                <a class="govuk-link app-related-navigation__section-link" href="{{ item.href }}">{{ item.text }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endfor %}
    </nav>
  {% endfor %}
</div>
